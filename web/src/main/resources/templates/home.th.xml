<thlogic>
    <attr
        sel="#head"
        th:replace="~{fragments/head :: headFragment}"
    />

    <attr sel="#welcome-text"
          th:text="#{game.welcome.text}"
    />

    <attr
        sel="#footer"
        th:replace="~{fragments/footer :: footerFragment}"
    />

    <attr
        sel="#play-link"
        th:text="#{game.play}"
        th:href="@{__${T(com.robinerickson.util.GameMappings).PLAY}__}"
    />
</thlogic>